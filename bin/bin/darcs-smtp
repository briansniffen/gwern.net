#!/bin/zsh
echo -e "account gmail\n
         host smtp.gmail.com\n
         user gwern0@gmail.com\n
         password `gpg-password`\n
         tls on\n
         port 587\n
         auth on\n
         from gwern0@gmail.com\n
         tls_trust_file /etc/ssl/certs/ca-certificates.crt\n
         account default : gmail" > .tmp &&
msmtp -C .tmp -t <&0
rm .tmp